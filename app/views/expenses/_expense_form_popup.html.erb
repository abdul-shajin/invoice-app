<div id="expense_form_popup" class="modal editableModal editPaymentModal editProject editClient newModel mCustomScrollbar">
  <div class="modal-content modal-balance">
    <%- model_class = Expense -%>
    <%#= form_for expense, :html => {:class => 'expense-form form-horizontal', :id => 'newExpense', :novalidate => ""} do |f| %>
        <div class="modal-header clearfix text-content">
          <div class="modal-action-btn right">
            <a href="javascript:void(0);" onclick="$('.client_submit').click();" title="<%= t('views.common.save') %>"
               class="modal-action waves-effect">
              <i class="material-icons" >done</i>
            </a>
            <a href="javascript:void(0);" title="<%= t('views.common.cancel') %>" class="modal-action modal-close waves-effect">
              <i class="material-icons close">close</i>
            </a>
          </div>
          <h5 class="left text-blue">
            <% if expense.persisted? %>
                <%= t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                              :default => "Edit #{model_class.model_name.human}") %>:
            <% else %>
                <%= t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                              :default => "New  #{model_class.model_name.human}") %>
            <% end %>
            <%= link_to '', 'javascript:void;', class: 'hidden', data: {remote: true}, id: 'open_new_popup_link' %>
            <%# selected_client = @client.present? ? @client.id : f.object.client_id %>
            <%#= f.select :client_id, options_for_select(load_clients(action_name, get_user_current_company.id), selected: selected_client),  {prompt: "Select Client", include_blank: false}, {:class => "inline-select custom_select" } %>
          </h5>
<!--          <div class="modal-action-btn right">-->
<!--            <a href="#" onclick="$('.send_submit').click();" title="Save"><i class="material-icons">send</i></a>-->
            <%# button_text = action_name == "new" ? t('views.common.save_as_draft') : t('views.common.save') %>
            <%#= f.submit "#{button_text}", :class => 'send_submit submit hidden expense-submit-btn', :name => 'save_as_draft' %>
<!--          </div>-->

<!--          expense-form form-horizontal <- formclass -->
        </div>

    <%= simple_form_for expense, remote: true, html: { id: 'newClient', class: 'invoice-form form-invoice form-horizontal nested-forms' } do |f| %>
        <div class="modal-body modal-body-balance">
          <div class="info-right-section">
            <div class="row">
              <%= f.submit class: 'btn_large submit hidden client_submit' %>
              <h5 id="step1" class="text-blue title-heading intro clients-new-false-intro"><%= t('views.expenses.form_title_basic') %></h5>
              <%= f.input :amount, label: t('views.expenses.amount'), wrapper_html: { class: 'input-field col s12' } %>
              <%= f.input :expense_date, label: t('views.expenses.expense_date'), wrapper_html: { class: 'input-field col s6 m4' }, as: :string %>
              <%= f.input :category_id, label: t('views.expenses.category'), wrapper_html: { class: 'input-field col s6 m4' } %>

              <div class="input-field col s6 m4 info-left-section new-invoice-section">
<!--                <span class="label-font intro invoices-new-false-intro" data-intro = 'Here you can select the client for which you are creating invoice' data-step= '5'><%#= t('views.clients.client') %> </span>-->
                <% selected_client = @client.present? ? @client.id : 1 %>
                <%= f.select :client_id, (options_for_select((load_clients(action_name, expense.company_id)),
                                                             selected: selected_client)),
                             {prompt: t('views.invoices.select_client'), include_blank: false}, data: {action_path: new_client_path}, class: 'add_link_select invoice-client-select select_2' %>

              </div>
              <%#= f.input :client_id, label: t('views.expenses.client'), wrapper_html: { class: 'input-field col s6 m4' } %>
              <%= f.hidden_field :company_id  %>
              <%= f.input :note, input_html: {style: "border:0px;resize:none;height:100px"}, border: '0', class: '', wrapper_html: {min: 0, step: 'any', class: 'input-field col s12'}, as: :text %>
            </div>
          </div>
        </div>
    <% end %>
        <div class="modal-footer">
          <div class="row">
            <div class="text-info col l6">
<!--              <strong>Note</strong>-->
              <%#= f.text_area :note,  maxlength: 400, class: 'materialize-textarea'%>
            </div>
          </div>
        </div>

  </div>
</div>

<script>
  $(document).ready(function() {
    $('.select_2').select2();
    set_client_currency = "<%= set_client_currency_invoices_path %>"
    jQuery("#expense_client_id").on('change', function(){
      $.get(set_client_currency+'?client_id=' + $(this).val())
    })
  })
</script>

